<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <h1 class="formHeader">Edit <%= book.title %></h1>
        <div class="formDiv">
            
            <!-- EDIT BOOK FORM -->
            <form action="/books/<%= book._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input class="form-control" type="text" id="title" name="book[title]" value="<%= book.title %>" required>
                </div>
                <div class="form-group">
                    <label for="author">Author:</label>
                    <input class="form-control" type="text" id="author" name="book[author]" value="<%= book.author %>" required>
                </div>
                <div class="form-group">
                    <label for="imageurl">Image URL:</label>
                    <input class="form-control" type="text" id="imageurl" name="book[image]" value="<%= book.image %>" required>
                </div>
                <div class="form-group">
                    <label for="description">Description:</label>
                    <input class="form-control" type="text" id="description" name="book[description]" value="<%= book.description %>" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit Changes</button>
                </div>
            </form>
            
            <!-- LINK BACK TO INDEX PAGE -->
            <a href="/books">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>